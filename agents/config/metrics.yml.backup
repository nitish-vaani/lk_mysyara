# LiveKit Metrics Configuration - Optimized for Load Testing
enabled: true
agent_name: "outbound-caller"

# Redis Configuration
redis_host: "localhost"
redis_port: 6379
redis_ttl_hours: 6

# Database (disabled for quick start)
database_enabled: false

# Monitoring
monitoring_enabled: true
monitoring_port: 8090
monitoring_host: "0.0.0.0"

# Collection Settings
collect_system_metrics: true
collect_call_metrics: true
system_metrics_interval: 30

# Performance Thresholds for 500 calls
cpu_warning_threshold: 70.0
cpu_critical_threshold: 85.0
memory_warning_threshold: 75.0
memory_critical_threshold: 90.0

# Load Testing Configuration
max_concurrent_calls: 50
target_calls_for_test: 500

# Logging
log_level: "INFO"
detailed_logging: false
